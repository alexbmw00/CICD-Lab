pipeline {
    agent any
    
    /*
    tools {
        maven "maven361"
    }
    */
    
    parameters {
        string(name: "SYMFONY_ENV", defaultValue: "dev", description: "Vari√°vel de ambiente do Symfony.")
    }
    
    environment {
        APP_VERSION = "v1.0"
        DIRETORIO = pwd()
    }
    
    stages {
        stage("echoes") {
            steps {
                sh "echo $APP_VERSION e ${params.SYMFONY_ENV}"
                echo "Build number: $BUILD_NUMBER"
            }
        }
        
        stage("BUILD_TAG") {
            steps {
                echo "Build tag: $BUILD_TAG"
                echo "DIRETORIO: $DIRETORIO"
            }
        }
        
        stage("Stage em Paralelo"){
            parallel {
                stage("iOS"){
                    steps{
                        echo "xcode..."
                    }
                }            
                stage("Android"){
                    steps{
                        echo "java..."
                    }
                }
                stage("Windows Phone"){
                    steps{
                        echo ".Net..."
                    }
                }
            }
            
        }
        
        stage("Somente quando SYMFONY_ENV for PROD"){
            when{
                environment name: 'SYMFONY_ENV', value:  'PROD'
            }
            steps{
                echo "Entrando em producao"
            }
        }
    }
}
